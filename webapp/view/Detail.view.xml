<mvc:View
    controllerName="firstapp.project1.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

  <Page
    title="{i18n>detailPageTitle}"
    showNavButton="true"  
    navButtonPress=".onNavBack"
    class="sapUiResponsivePadding--content sapUiResponsivePadding--header">

    <content>
      <VBox class="sapUiSmallMarginBottom">
        <ObjectHeader
          title="{CustomerName}"
          number="{CustomerId}"
          numberUnit="Customer ID">
          <attributes>
            <ObjectAttribute title="City" text="{City}" />
          </attributes>
        </ObjectHeader>
      </VBox>

      <Panel headerText="Customer Information" class="sapUiResponsiveMargin">
        <content>
          <f:SimpleForm layout="ResponsiveGridLayout" editable="false">
            <f:content>
              <Label text="Customer Name" />
              <Text text="{CustomerName}" />

              <Label text="Customer ID" />
              <Text text="{CustomerId}" />

              <Label text="City" />
              <Text text="{City}" />
            </f:content>
          </f:SimpleForm>
        </content>
      </Panel>

      <Panel headerText="Bookings" class="sapUiResponsiveMargin" expandable="true" expanded="true">
        <content>
          <Table
            items="{path: '_Bookings'}"
            growing="true"
            growingThreshold="8"
            noDataText="No bookings found">

            <columns>
              <Column>
                <Text text="Airline" />
              </Column>
              <Column>
                <Text text="Booking" />
              </Column>
              <Column>
                <Text text="Flight Date" />
              </Column>
              <Column hAlign="End">
                <Text text="Amount" />
              </Column>
              <Column>
                <Text text="Currency" />
              </Column>
              <Column>
                <Text text="Cancelled" />
              </Column>
            </columns>

            <items>
              <ColumnListItem>
                <cells>
                  <Text text="{AirlineID}" />
                  <Text text="{BookingNumber}" />
                  <Text text="{
                    path: 'FlightDate',
                    type: 'sap.ui.model.type.Date',
                    formatOptions: {
                      source: {pattern: 'yyyy-MM-dd'},
                      style: 'medium'
                    }
                  }" />
                  <ObjectNumber number="{ForeignCurrencyPayment}" />
                  <Text text="{ForeignCurrency}" />
                  <ObjectStatus
                    text="{IsCancelled}"
                    state="{= ${IsCancelled} === 'Yes' ? 'Error' : 'Success' }" />
                </cells>
              </ColumnListItem>
            </items>
          </Table>
        </content>
      </Panel>
    </content>
  </Page>

</mvc:View>